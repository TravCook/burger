<h1>Welcome to the BURGER BUFFET!</h1>

<div class = "container">
  <div class = "col-4">
    <h2>Burgers to be Eaten</h2>
    <ul>
      {{#each burger}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured = true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class = "col-4">
    <h2>Request a burger!</h2>
    <form class ="request">
      <div class ="burgerName">
        <label for="burg">Name of Burger:</label>
        <input type = "text" id="burg" name="name"> 
      </div>
      <button type+"submit">REQUEST!</button>
    </form>
  </div>
  <div class = "col-4">
    <h2>Devoured Burgers</h2>
        <ul>
      {{#each burger}}
        {{#if devoured}}
          {{> burgers/burger-block devoured = false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>